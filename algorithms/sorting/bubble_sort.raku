###########################################
############### BUBBLE SORT ###############
###########################################

sub bubble_sort(@a) {
  my $i = 0;

  while $i < @a.elems {
    my $j = @a.elems - 1;
    while $i < $j {
      if @a[$j] < @a[$j - 1] {
        (@a[$j], @a[$j - 1]) = (@a[$j - 1], @a[$j]);
      }
      $j--;
    }
    $i++;
  }
  return @a;
}
